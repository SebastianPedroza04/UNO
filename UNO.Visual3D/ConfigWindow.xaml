<Window x:Class="UNO.VisualWpf.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración de partida UNO"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#202020">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO Y Nº DE JUGADORES -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Configurar partida UNO"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Número de jugadores:"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbJugadores"
                          Width="60"
                          Margin="8,0,0,0"
                          SelectedIndex="0">
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- NOMBRES Y BOTS -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Fila 1 -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Jugador 1:"
                       Foreground="White"
                       Margin="0,0,8,4"/>
            <TextBox x:Name="TxtJ1" Grid.Row="0" Grid.Column="1"
                     Margin="0,0,8,4" Text="Tú"/>
            <CheckBox x:Name="ChkJ1" Grid.Row="0" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,4"/>

            <!-- Fila 2 -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Jugador 2:"
                       Foreground="White"
                       Margin="0,0,8,4"/>
            <TextBox x:Name="TxtJ2" Grid.Row="1" Grid.Column="1"
                     Margin="0,0,8,4" Text="BOT1"/>
            <CheckBox x:Name="ChkJ2" Grid.Row="1" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,4" IsChecked="True"/>

            <!-- Fila 3 -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Jugador 3:"
                       Foreground="White"
                       Margin="0,0,8,4"/>
            <TextBox x:Name="TxtJ3" Grid.Row="2" Grid.Column="1"
                     Margin="0,0,8,4" Text="J3"/>
            <CheckBox x:Name="ChkJ3" Grid.Row="2" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,4"/>

            <!-- Fila 4 -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Jugador 4:"
                       Foreground="White"
                       Margin="0,0,8,4"/>
            <TextBox x:Name="TxtJ4" Grid.Row="3" Grid.Column="1"
                     Margin="0,0,8,4" Text="J4"/>
            <CheckBox x:Name="ChkJ4" Grid.Row="3" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,4"/>

            <!-- Fila 5 -->
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Text="Jugador 5:"
                       Foreground="White"
                       Margin="0,0,8,4"/>
            <TextBox x:Name="TxtJ5" Grid.Row="4" Grid.Column="1"
                     Margin="0,0,8,4" Text="J5"/>
            <CheckBox x:Name="ChkJ5" Grid.Row="4" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,4"/>

            <!-- Fila 6 -->
            <TextBlock Grid.Row="5" Grid.Column="0"
                       Text="Jugador 6:"
                       Foreground="White"
                       Margin="0,0,8,0"/>
            <TextBox x:Name="TxtJ6" Grid.Row="5" Grid.Column="1"
                     Margin="0,0,8,0" Text="J6"/>
            <CheckBox x:Name="ChkJ6" Grid.Row="5" Grid.Column="2"
                      Content="BOT"
                      Foreground="White"
                      Margin="0,0,0,0"/>
        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    Click="BtnCancelar_Click"/>
            <Button Content="Iniciar partida"
                    Width="120"
                    Click="BtnIniciar_Click"/>
        </StackPanel>
    </Grid>
</Window>
