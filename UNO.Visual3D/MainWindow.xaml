<Window x:Class="UNO.VisualWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UNO - Interfaz WPF"
        Width="900" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#202020">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Info superior -->
            <RowDefinition Height="*"/>
            <!-- Mano del jugador -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="2*"/>
            <!-- Log -->
        </Grid.RowDefinitions>

        <!-- INFO SUPERIOR -->
        <Border Grid.Row="0" Padding="10" CornerRadius="8" Background="#303030">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="LblTurno"
                           FontSize="18" Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="LblTope"
                           Margin="0,4,0,0"
                           Foreground="LightGray"
                           FontSize="14"/>
                <TextBlock x:Name="LblColorActual"
                           Margin="0,2,0,0"
                           Foreground="LightGray"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- MANO DEL JUGADOR ACTUAL -->
        <Border Grid.Row="1" Margin="0,10,0,10" Padding="10"
                CornerRadius="8" Background="#252525">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="PanelMano" Margin="5" />
            </ScrollViewer>
        </Border>

        <!-- BOTONES DE ACCIÓN -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" >
            <Button x:Name="BtnJugar"
                    Content="Jugar carta seleccionada"
                    Padding="12,6"
                    Margin="5"
                    Click="BtnJugar_Click"/>
            <Button x:Name="BtnRobar"
                    Content="Robar carta"
                    Padding="12,6"
                    Margin="5"
                    Click="BtnRobar_Click"/>
            <Button x:Name="BtnHistorial"
                    Content="Ver historial"
                    Padding="12,6"
                    Margin="5"
                    Click="BtnHistorial_Click"/>
            <Button x:Name="BtnNuevo"
                    Content="Nueva partida"
                    Padding="12,6"
                    Margin="5"
                    Click="BtnNuevo_Click"/>
        </StackPanel>

        <!-- LOG / MENSAJES -->
        <Border Grid.Row="3" Padding="10" CornerRadius="8" Background="#151515">
            <TextBox x:Name="TxtLog"
                     Foreground="White"
                     Background="#151515"
                     BorderBrush="#444"
                     FontFamily="Consolas"
                     FontSize="13"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </Border>

    </Grid>
</Window>
